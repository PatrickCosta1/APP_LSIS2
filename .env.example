# Copie para .env e ajuste conforme necessário.
# NÃO comitar .env com credenciais reais.

# Backend
MONGODB_URI=mongodb://127.0.0.1:27017/kynex
# MONGODB_DB=kynex
# PORT=4100

# (Opcional) Simulador/IA
KYNEX_SIM_TICK_MS=10000
KYNEX_AI_TRAIN_DAYS=14

# (Opcional) LLM via OpenRouter (NUNCA comite a chave real)
OPENROUTER_API_KEY=

# Você pode controlar o LLM de duas formas (ambas funcionam):
# - Novo: LLM_MODE=full|off
# - Legado: KYNEX_LLM_ENABLED=1|0
LLM_MODE=full
KYNEX_LLM_ENABLED=1

# Modelo (ambas funcionam):
# - Novo: OPENROUTER_MODEL
# - Legado: KYNEX_LLM_MODEL
OPENROUTER_MODEL=tngtech/deepseek-r1t2-chimera:free
KYNEX_LLM_MODEL=tngtech/deepseek-r1t2-chimera:free

# Timeout do OpenRouter (ms)
OPENROUTER_TIMEOUT_MS=12000

# Frontend (Vite)
VITE_API_BASE=http://localhost:4100
