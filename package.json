{
  "name": "kynex",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "scripts": {
    "start": "npm run start --workspace @kynex/backend",
    "dev": "npm run dev:backend",
    "dev:frontend": "npm run dev --workspace @kynex/frontend",
    "dev:backend": "npm run dev --workspace @kynex/backend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "npm run build --workspace @kynex/frontend",
    "build:backend": "npm run build --workspace @kynex/backend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend": "npm run test --workspace @kynex/frontend",
    "test:backend": "npm run test --workspace @kynex/backend",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:frontend": "npm run lint --workspace @kynex/frontend",
    "lint:backend": "npm run lint --workspace @kynex/backend"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10"
}
